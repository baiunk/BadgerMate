name: CI/CD Pipeline

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]
  workflow_dispatch:

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
      # 1️⃣ Checkout Repository
      - name: Checkout Code
        uses: actions/checkout@v4

      # 2️⃣ Set Up Python (Backend)
      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: 3.9

      # 3️⃣ Install Backend Dependencies
      - name: Install Backend Dependencies
        run: |
          pip install -r requirements.txt

      # 4️⃣ Create .env File for MongoDB Connection
      - name: Create .env File
        run: |
          echo "MONGO_URI=${{ secrets.MONGO_URI }}" >> .env

      # 5️⃣ Start Backend Server
      - name: Start Backend Server
        run: |
          nohup python backend.py &  # Replace 'app.py' with your backend's entry file

      # 6️⃣ Set Up Node.js (Frontend)
      - name: Set up Node.js
        uses: actions/setup-node@v4
        with:
          node-version: 18

      # 7️⃣ Install and Start React App
      - name: Install & Start React App
        run: |
          cd badgermate
          npm install
          nohup npm start &  # Keeps React running in the background
